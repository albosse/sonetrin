{% extends 'sonetrinDefaultBundle::layout.html.twig' %}

{% block content %}

<h1 class="page-header">{{ 'Cronjob'|trans }}</h1>

<table class="record_properties table table-bordered table-condensed table-striped">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Frequency</th>
            <td>{{ entity.frequency }}</td>
        </tr>
        <tr>
            <th>Active</th>
            <td><i class="{{ entity.active ? 'icon-check' : '' }}"></i></td>
        </tr>
        <tr>
            <th>Createdat</th>
            <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
        </tr>
        <tr>
            <th>Updatedat</th>
            <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
        </tr>
    </tbody>
</table>

    <p>
        <a class="btn" href="{{ path('cronjob_edit', { 'id': entity.id }) }}">
            <i class="icon-pencil"></i>
            {{ 'edit'|trans }}
        </a>
    </p>

    <form action="{{ path('cronjob_delete', { 'id': entity.id }) }}" method="post">
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit">
            <i class="icon-trash"></i>
            {{ 'delete'|trans }}
        </button>
    </form>

    <a class="btn" href="{{ path('cronjob') }}">
        <i class="icon-th-list"></i>
        {{ 'back to the list'|trans }}
    </a>

{% endblock %}